blackColor = #454545
blueColor = #06c
grayColor = #ccc
lightGrayColor = #ddd
whiteColor = #fff

fontNamePickerWidth = 105px
fontSizePickerWidth = 80px
textAlignPickerWidth = 32px

inputSize = 12px
inputPadding = 6px
separatorMargin = 4px
inputHeight = inputSize + 2*inputPadding
toolbarPadding = 8px

colorItemMargin = 2px
colorItemWidth = 16px
colorItemsPerRow = 7

formatGroupMargin = 15px

formatInput =
  box-sizing: border-box
  display: inline-block
  height: inputHeight
  line-height: inputHeight
  vertical-align: middle

@font-face
  font-family: 'quill-snow'
  font-style: normal
  font-weight: normal
  src: url('assets/quill-snow.eot') format('embedded-opentype'), url('assets/quill-snow.woff') format('woff')


.ql-toolbar-container
  box-sizing: border-box
  padding: toolbarPadding toolbarPadding toolbarPadding - 1 toolbarPadding
  user-select: none
  -webkit-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  .ql-format-group
    display: inline-block
    margin-right: formatGroupMargin
    vertical-align: middle
  .ql-format-separator
    box-sizing: border-box
    background-color: lightGrayColor
    display: inline-block
    height: inputHeight - inputPadding
    margin-left: separatorMargin
    margin-right: separatorMargin
    vertical-align: middle
    width: 1px
  .ql-format-button
    {formatInput}
    background-position: center center
    background-repeat: no-repeat
    box-sizing: border-box
    cursor: pointer
    font-family: 'quill-snow'
    font-size: inputSize
    margin-top: 1px     // Some reason buttons look more aligned with this
    text-align: center
    width: inputHeight
  .ql-format-button:hover, .ql-format-button.ql-active, .ql-format-button.ql-on
    color: blueColor
  .ql-format-button.ql-bold:before
    content: "\e801"
  .ql-format-button.ql-italic:before
    content: "\e802"
  .ql-format-button.ql-underline:before
    content: "\e803"
  .ql-format-button.ql-strike:before
    content: "\e804"
  .ql-format-button.ql-link:before
    content: "\e805"
  .ql-format-button.ql-image:before
    content: "\e806"
  .ql-format-button.ql-list:before
    content: "\e807"
  .ql-format-button.ql-bullet:before
    content: "\e808"
  .ql-format-button.ql-indent:before
    content: "\e809"
  .ql-format-button.ql-outdent:before
    content: "\e80A"
  .ql-format-button.ql-superscript:before
    content: "\e80F"
  .ql-format-button.ql-subscript:before
    content: "\e810"
  .ql-format-button.ql-authorship:before
    content: "\e811"

/* Fix for iOS not losing hover state after click */
.ql-toolbar-container.ios
  .ql-format-button:hover
    color: inherit
  .ql-format-button.ql-active, .ql-format-button.ql-on
    color: blueColor

.ql-picker
  box-sizing: border-box
  font-size: 13px
  display: inline-block
  font-family: 'Helvetica', 'Arial', sans-serif
  font-weight: bold
  position: relative
  .ql-picker-label
    {formatInput}
    background-color: whiteColor
    border: 1px solid transparent
    cursor: pointer
    padding-left: toolbarPadding
    padding-right: toolbarPadding
    position: relative
    width: 100%
  .ql-picker-label:after
    content: "\e812"
    float: right
    font-family: 'quill-snow'
    font-size: 12px
    margin-left: 8px
  .ql-picker-label.ql-active, .ql-picker-label:hover
    color: blueColor
  .ql-picker-options
    background-color: whiteColor
    border: 1px solid transparent
    box-sizing: border-box
    display: none
    padding: 0.5*toolbarPadding toolbarPadding
    position: absolute
    width: 100%
    .ql-picker-item
      box-sizing: border-box
      cursor: pointer
      display: block
      padding-bottom: inputPadding
      padding-top: inputPadding
    .ql-picker-item.selected, .ql-picker-item:hover
      color: blueColor
.ql-picker.ql-expanded
  .ql-picker-label
    border-color: grayColor
    color: grayColor
    z-index: 2
  .ql-picker-options
    border-color: grayColor
    box-shadow: rgba(0,0,0,0.2) 0 2px 8px
    display: block
    margin-top: -1px
    z-index: 1

.ql-picker.ql-font
  width: fontNamePickerWidth
.ql-picker.ql-size
  width: fontSizePickerWidth
.ql-picker.ql-align
  font-family: 'quill-snow'
  .ql-picker-label
    margin-top: 1px     // Some reason button look more aligned with this
  .ql-picker-label:after
    content: normal
  .ql-picker-options
    width: textAlignPickerWidth
  .ql-picker-label[data-value=left]:before, .ql-picker-item[data-value=left]:before
    content: "\e80B"
  .ql-picker-label[data-value=right]:before, .ql-picker-item[data-value=right]:before
    content: "\e80C"
  .ql-picker-label[data-value=center]:before, .ql-picker-item[data-value=center]:before
    content: "\e80D"
  .ql-picker-label[data-value=justify]:before, .ql-picker-item[data-value=justify]:before
    content: "\e80E"

.ql-picker.ql-color-picker
  width: 32px   // Remove when we switch to using font icons
  .ql-picker-label
    background-position: center center
    background-repeat: no-repeat
  .ql-picker-label:after
    content: normal
  .ql-picker-options
    padding: inputPadding
    width: (colorItemWidth + 2*colorItemMargin) * colorItemsPerRow + 2*inputPadding + 2  // +2 for the border
    .ql-picker-item
      border: 1px solid transparent
      float: left
      height: colorItemWidth
      margin: colorItemMargin
      padding: 0px
      width: colorItemWidth
    .ql-picker-item.ql-primary-color
      margin-bottom: 8px
    .ql-picker-item.selected, .ql-picker-item:hover
      border-color: #000

for $format in color background
  .ql-picker.ql-{$format} .ql-picker-label
    background-image: url('assets/' + $format + '.png')
  .ql-picker.ql-{$format} .ql-picker-label.ql-active, .ql-picker.ql-{$format} .ql-picker-label:hover, .ql-picker.ql-{$format}.ql-expanded .ql-picker-label
    background-image: url('assets/' + $format + '-active.png')
